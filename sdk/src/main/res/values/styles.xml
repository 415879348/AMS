<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="spsdk_space">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="spsdk_space_height">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="spsdk_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="spsdk_view_empty">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="spsdk_text_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/spsdk_main_color</item>
    </style>

    <style name="spsdk_text_standard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/spsdk_main_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="spsdk_text_main12" parent="spsdk_text_main">
        <item name="android:textSize">@dimen/spsdk_ts_12</item>
    </style>

    <style name="spsdk_text_main14" parent="spsdk_text_main">
        <item name="android:textSize">@dimen/spsdk_ts_14</item>
    </style>

    <style name="spsdk_text_main16" parent="spsdk_text_main">
        <item name="android:textSize">@dimen/spsdk_ts_16</item>
    </style>

    <style name="spsdk_text_main18" parent="spsdk_text_main">
        <item name="android:textSize">@dimen/spsdk_ts_18</item>
    </style>

    <style name="spsdk_text_second">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/spsdk_second_color</item>
    </style>

    <style name="spsdk_text_second12" parent="spsdk_text_second">
        <item name="android:textSize">@dimen/spsdk_ts_12</item>
    </style>

    <style name="spsdk_text_second16" parent="spsdk_text_second">
        <item name="android:textSize">@dimen/spsdk_ts_16</item>
    </style>

    <style name="spsdk_text_second18" parent="spsdk_text_second">
        <item name="android:textSize">@dimen/spsdk_ts_18</item>
    </style>

    <style name="spsdk_text_home" parent="spsdk_text_second">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/spsdk_main_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/spsdk_ts_14</item>
    </style>

    <style name="spsdk_selector_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="spsdk_selector_icon_width">@dimen/spsdk_dp_25</item>
        <item name="spsdk_selector_icon_height">@dimen/spsdk_dp_25</item>
    </style>

    <style name="spsdk_edit_view_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="spsdk_card_edit_max_length">50</item>
        <item name="spsdk_card_edit_max_length_tip">@string/the_maximum_character_length_is</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>//背景是否变暗
    </style>


    <style name="spsdk_progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>//背景是否变暗
    </style>

    <style name="spsdk_alert_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>//背景是否变暗
    </style>

    <style name="spsdk_main_tablayout_style" parent="Widget.Design.TabLayout">
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
    </style>

    <style name="spsdk_statistics_tablayout_style" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/spsdk_background_white</item>
        <item name="tabIndicatorColor">@color/spsdk_second_color</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/spsdk_main_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/spsdk_main_color</item>
    </style>

    <!-- android Dialog去掉标题栏 和边框 -->
    <style name="spsdk_dialog_theme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--这个无标题才可以的-->
        <item name="windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowBackground">@null</item>

        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 分割线 -->
    <style name="spsdk_divide_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/spsdk_color_gray2</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.FixedSize">
        <!--设置header部分显示的颜色-->
        <item name="colorPrimary">@color/spsdk_second_color</item>
        <item name="colorPrimaryDark">@color/spsdk_second_color</item>
        <item name="colorAccent">@color/spsdk_second_color</item>
    </style>

    <!--弹出框动画-->
    <style name="share_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/spsdk_anim_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/spsdk_anim_dialog_out</item>
    </style>

    <!-- 对话框样式 -->
    <style name="dialog_bottom_full" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <!-- home item style -->
    <style name="spsdk_home_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spsdk_dp_150</item>
        <item name="android:background">@color/spsdk_transparent_00</item>
        <item name="android:padding">@dimen/spsdk_dp_5</item>
    </style>

    <!-- home item style -->
    <style name="spsdk_item_style_record">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spsdk_dp_100</item>
        <item name="android:background">@color/spsdk_transparent_00</item>
        <item name="android:padding">@dimen/spsdk_dp_5</item>
    </style>

    <style name="popupWindowAnimStyle">
        <item name="android:windowEnterAnimation">@anim/spsdk_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/spsdk_push_bottom_out</item>
    </style>

    <style name="popupWindowAnimStyle2">
        <item name="android:windowEnterAnimation">@anim/spsdk_slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/spsdk_slide_out_left</item>
    </style>

</resources>
