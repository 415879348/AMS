<?xml version="1.0" encoding="utf-8"?>
<com.esharp.sdk.widget.swipy.SwipyRefreshLayout android:id="@+id/refreshLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:spsdk_direction="top">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/spsdk_dp_5"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/spsdk_dp_120"
        android:scrollbars="none"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</com.esharp.sdk.widget.swipy.SwipyRefreshLayout>




