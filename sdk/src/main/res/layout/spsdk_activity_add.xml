<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spsdk_dp_200">

    <ImageView
        android:layout_width="@dimen/spsdk_dp_20"
        android:layout_height="@dimen/spsdk_dp_20"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/spsdk_dp_7"
        android:src="@mipmap/spsdk_cancel"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spsdk_dp_100"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@mipmap/spsdk_amend_record"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@mipmap/spsdk_leave_record"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@mipmap/spsdk_overtime_reecord"/>

    </LinearLayout>

</RelativeLayout>