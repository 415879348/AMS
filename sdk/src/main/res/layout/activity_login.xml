<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ui.LoginTMSActivity">

    <!--    用户名密码登入-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.esharp.sdk.widget.MyTextView
            style="@style/spsdk_text"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/user_login"
            android:textColor="@color/spsdk_color_black"
            android:textSize="@dimen/spsdk_ts_30"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spsdk_dp_50"
            android:layout_marginTop="@dimen/spsdk_dp_30"
            android:layout_marginHorizontal="@dimen/spsdk_dp_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_account"
                android:layout_width="@dimen/spsdk_dp_40"
                android:layout_height="@dimen/spsdk_dp_40"
                android:gravity="center"
                android:src="@mipmap/username" />

            <EditText
                android:id="@+id/et_account"
                style="@style/spsdk_view_empty"
                android:hint="@string/please_enter_account"
                android:paddingStart="@dimen/spsdk_dp_10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spsdk_dp_50"
            android:layout_marginTop="@dimen/spsdk_dp_30"
            android:layout_marginHorizontal="@dimen/spsdk_dp_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_password"
                android:layout_width="@dimen/spsdk_dp_40"
                android:layout_height="@dimen/spsdk_dp_40"
                android:gravity="center"
                android:src="@mipmap/password" />

            <EditText
                android:id="@+id/et_password"
                style="@style/spsdk_view_empty"
                android:hint="@string/please_enter_password"
                android:inputType="textPassword"
                android:paddingStart="@dimen/spsdk_dp_10" />

        </LinearLayout>

        <com.esharp.sdk.widget.MyTextView
            android:id="@+id/mtv_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spsdk_dp_40"
            android:layout_margin="@dimen/spsdk_dp_20"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/spsdk_color_white"
            android:textSize="@dimen/spsdk_ts_16"
            android:textStyle="bold"
            app:stv_corner="@dimen/spsdk_dp_20"
            app:stv_solid="@color/spsdk_color_blue" />

    </LinearLayout>

</RelativeLayout>