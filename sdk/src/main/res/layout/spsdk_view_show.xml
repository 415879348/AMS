<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.widget.RelativeLayout">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/spsdk_dp_20"
        android:layout_height="@dimen/spsdk_dp_20"
        android:layout_centerVertical="true"
        android:src="@mipmap/spsdk_mobile_phone"
        />

    <TextView
        android:id="@+id/title"
        style="@style/spsdk_text_main16"
        android:layout_toEndOf="@+id/iv_icon"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/spsdk_dp_10"/>


    <TextView
        android:id="@+id/tv_detail"
        style="@style/spsdk_text_main16"
        android:layout_toStartOf="@id/icon2"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/spsdk_dp_10"/>

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="@dimen/spsdk_dp_20"
        android:layout_height="@dimen/spsdk_dp_20"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/spsdk_dp_30"
        android:src="@mipmap/spsdk_ic_arrow_left" />
</merge>