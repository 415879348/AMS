<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spsdk_dp_40"
    tools:parentTag="android.widget.RelativeLayout">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spsdk_dp_35"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="标题"
        android:textColor="@color/spsdk_main_color"
        android:textSize="@dimen/spsdk_ts_16" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/spsdk_dp_20"
        android:layout_height="@dimen/spsdk_dp_20"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/spsdk_dp_10"
        android:src="@mipmap/spsdk_ic_arrow_left" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/spsdk_dp_20"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/spsdk_dp_10"
        android:layout_toEndOf="@+id/iv_back"
        android:gravity="center"
        android:text="@string/spsdk_back"
        android:textColor="@color/spsdk_main_color"
        android:visibility="gone"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/title_right"
        android:layout_width="@dimen/spsdk_dp_45"
        android:layout_height="@dimen/spsdk_dp_45"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/spsdk_dp_5"
        android:padding="@dimen/spsdk_dp_10"
        android:src="@mipmap/spsdk_ic_launcher"
        android:visibility="gone"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/title_action"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/spsdk_dp_35"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:paddingEnd="@dimen/spsdk_dp_15"
        android:text="@string/app_name"
        android:textColor="@color/spsdk_color_green"
        android:textSize="@dimen/spsdk_ts_16"
        android:visibility="gone"
        tools:ignore="RtlSymmetry"
        tools:visibility="gone" />
</merge>