<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spsdk_dp_40"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        >

        <CheckBox
            android:id="@+id/cb"
            android:layout_width="@dimen/spsdk_dp_25"
            android:layout_height="@dimen/spsdk_dp_25"
            android:layout_marginEnd="@dimen/spsdk_dp_5"
            />

        <TextView
            android:id="@+id/tv_asset_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/asset_number"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_asset_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:text="@string/asset_name"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:text="@string/location"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="0.7"
        android:text="@string/state"
        android:textColor="@color/black"
        />

</LinearLayout>