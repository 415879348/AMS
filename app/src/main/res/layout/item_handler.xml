<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spsdk_dp_10"
    android:layout_marginTop="@dimen/spsdk_dp_10"
    android:layout_marginEnd="@dimen/spsdk_dp_10"
    android:layout_marginBottom="@dimen/spsdk_dp_10"
    app:cardCornerRadius="@dimen/spsdk_dp_5"
    app:cardElevation="@dimen/spsdk_dp_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spsdk_dp_10"
        android:orientation="vertical">

        <com.esharp.sdk.widget.SPShowTextView
            android:id="@+id/stv_handler"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spsdk_dp_25"
            app:spsdk_show_text_title="@string/handler"
            app:spsdk_show_text_detail=""
            />

        <com.esharp.sdk.widget.SPShowTextView
            android:id="@+id/stv_processing_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spsdk_dp_25"
            app:spsdk_show_text_title="@string/processing_time"
            app:spsdk_show_text_detail=""
            />

        <com.esharp.sdk.widget.SPShowTextView
            android:id="@+id/stv_remark2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spsdk_dp_25"
            app:spsdk_show_text_title="@string/remark"
            app:spsdk_show_text_detail=""
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>