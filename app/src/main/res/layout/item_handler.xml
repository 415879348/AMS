<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spsdk_dp_10"
    android:layout_marginTop="@dimen/spsdk_dp_10"
    android:layout_marginEnd="@dimen/spsdk_dp_10"
    android:layout_marginBottom="@dimen/spsdk_dp_10"
    app:cardCornerRadius="@dimen/spsdk_dp_5"
    app:cardElevation="@dimen/spsdk_dp_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spsdk_dp_10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.continental.sdk.widget.SPShowTextView
                android:id="@+id/stv_handler"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spsdk_dp_25"
                app:spsdk_show_text_title="@string/handler"
                app:spsdk_show_text_detail=""
                />
            <com.continental.sdk.widget.SPIconTextView
                android:id="@+id/itv_edit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spsdk_dp_25"
                android:layout_alignParentEnd="true"
                app:spsdk_icon="@mipmap/edit"
                android:visibility="gone"
                app:spsdk_text="@string/edit" />
        </RelativeLayout>


        <com.continental.sdk.widget.SPShowTextView
            android:id="@+id/stv_processing_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spsdk_dp_25"
            app:spsdk_show_text_title="@string/processing_time"
            app:spsdk_show_text_detail=""
            />

        <com.continental.sdk.widget.SPShowTextView
            android:id="@+id/stv_remark2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spsdk_dp_25"
            app:spsdk_show_text_title="@string/remark"
            app:spsdk_show_text_detail=""
            />

        <LinearLayout
            android:id="@+id/ll_appendix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/spsdk_text_main14"
                android:text="@string/appendix"
                />

            <com.continental.sdk.widget.AutoNextLineLinearlayout
                android:id="@+id/ll_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>