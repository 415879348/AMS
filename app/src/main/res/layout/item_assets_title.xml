<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@color/spsdk_transparent_10"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="@dimen/spsdk_dp_30">

        <CheckBox
            android:layout_width="@dimen/spsdk_dp_25"
            android:layout_height="@dimen/spsdk_dp_25"
            android:layout_marginEnd="@dimen/spsdk_dp_5"
            android:enabled="false"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/spsdk_dp_30"
            android:gravity="center"
            android:text="@string/asset_number"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/spsdk_dp_30"
        android:gravity="center"
        android:layout_weight="1"
        android:text="@string/asset_name"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/spsdk_dp_30"
        android:gravity="center"
        android:layout_weight="1"
        android:text="@string/location"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/spsdk_dp_30"
        android:gravity="center"
        android:layout_weight="0.5"
        android:text="@string/state"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

</LinearLayout>